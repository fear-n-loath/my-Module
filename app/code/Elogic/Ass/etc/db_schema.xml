<?xml version="1.0"?>

<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="guns_table" resource="default" engine="innodb" comment="Guns Table Declarative">
        <column xsi:type="smallint" name="entity_id" padding="6" unsigned="false" nullable="false" identity="true" comment="Guns Entity ID"/>
        <column xsi:type="text" name="name" nullable="true" comment="Guns Name"/>
        <column xsi:type="text" name="type" nullable="true" comment="Guns Type"/>
        <column xsi:type="float" name="caliber" nullable="true" comment="Guns Caliber"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
    </table>
</schema>
